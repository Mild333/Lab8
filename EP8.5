void setup() {
  
  Serial.begin(9600);
  pinMode(17,INTPUT);
  pinMode(13,OUTPUT);
}
void loop() {
  
  while (Serial0.available() > 0) {
    char a = Serial0.read();
    if(a == '1'){
      digitalWrite(13, HIGH);
    }
    else if(a == '0'){
      digitalWrite(13, LOW);
    }
  }

  int a = 0;
  a = digitalRead(17);
      if (a == 1){
      Serial0.prinln('1');
    }
    else if (a == 0){
      Serial0.prinln('0');
    }
    delay(100);
}
